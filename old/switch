# kill firefox
# echo "killing firefox"
killall -e firefox &> /dev/null

# get proxy to set
# echo "getting proxy to set"
proxyToSet=$1

# run firefox with proxy
echo "running firefox with proxy $proxyToSet"
firefox -P "proxy$proxyToSet" &


